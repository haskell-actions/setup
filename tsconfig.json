{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNEXT"],
    "module": "commonjs",
    "incremental": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": ".out",
    "tsBuildInfoFile": ".out/tsbuildinfo"
  },
  "exclude": ["**/*.test.ts"]
}
